{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to .NET App in Container",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": [
          "exec",
          "-i",
          "app-config-demo-local"
        ],
        "debuggerPath": "/vsdbg/vsdbg",
        "pipeCwd": "${workspaceFolder}",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "/workspace/app": "${workspaceFolder}/app"
      }
    },
    {
      "name": "Debug .NET App (Local)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/app/bin/Debug/net8.0/app.dll",
      "args": [],
      "cwd": "${workspaceFolder}/app",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/app/Views"
      }
    }
  ]
}